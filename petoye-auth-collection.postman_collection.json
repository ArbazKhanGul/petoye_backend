{
  "info": {
    "_postman_id": "petoye-backend-auth-collection",
    "name": "Petoye Backend Auth API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for testing Petoye authentication and user management APIs"
  },
  "variable": [
    { "key": "baseUrl", "value": "{{BASE_URL}}" },
    { "key": "token", "value": "{{JWT_TOKEN}}" },
    { "key": "refreshToken", "value": "{{REFRESH_TOKEN}}" },
    { "key": "userId", "value": "{{USER_ID}}" }
  ],
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"Password@123\",\n  \"dateOfBirth\": \"1990-01-01\",\n  \"country\": \"India\",\n  \"phoneNumber\": \"9876543210\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Password@123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/logout",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "logout"]
        }
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/refresh-token",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "refresh-token"]
        }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/verify-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "verify-otp"]
        }
      }
    },
    {
      "name": "Resend OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/resend-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "resend-otp"]
        }
      }
    },
    {
      "name": "Update Profile",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "fullName", "value": "John Doe", "type": "text" },
            { "key": "phoneNumber", "value": "9876543210", "type": "text" },
            { "key": "country", "value": "India", "type": "text" },
            { "key": "dateOfBirth", "value": "1990-01-01", "type": "text" },
            { "key": "profileImage", "type": "file" }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/update-profile",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "update-profile"]
        }
      }
    },
    {
      "name": "Add FCM Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"fcmToken\": \"sample-fcm-token\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/add-fcm-token",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "add-fcm-token"]
        }
      }
    },
    {
      "name": "Google Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"idToken\": \"GOOGLE_ID_TOKEN\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/google-login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "google-login"]
        }
      }
    },
    {
      "name": "Forgot Password - Send OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/forgot-password/send-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "forgot-password", "send-otp"]
        }
      }
    },
    {
      "name": "Forgot Password - Verify OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/forgot-password/verify-otp",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "forgot-password", "verify-otp"]
        }
      }
    },
    {
      "name": "Forgot Password - Reset",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"NewPassword@123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/forgot-password/reset",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "forgot-password", "reset"]
        }
      }
    },
    {
      "name": "Update Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"oldPassword\": \"Password@123\",\n  \"newPassword\": \"NewPassword@123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/update-password",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "update-password"]
        }
      }
    }
  ]
}
